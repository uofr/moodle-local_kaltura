{{!
    @template local_kaltura/modal_kaltura_progress

    Template for Kaltura progress modal.
}}

{{< core/modal }}

    {{$headerclasses}}hide-x-button{{/headerclasses}}

    {{$header}}
        <h5 id="{{uniqid}}-modal-title" class="modal-title" data-region="title">
            {{$title}}
                {{#str}}uploading_header, local_kaltura{{/str}}
            {{/title}}
        </h5>
    {{/header}}

    {{$body}}
        <div class="progress">
            <div id="modal_progress_bar" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                0%
            </div>
        </div>
    {{/body}}

{{/ core/modal }}